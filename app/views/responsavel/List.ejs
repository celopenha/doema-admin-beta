					<div class="card">
						<div class="header">
							<h2>Listagem de Responsáveis</h2>
							<a href="/app/<%= page %>/create" style="float: right; margin-top: -20px; margin-right: 10px;" data-toggle="modal" data-toggle-alt="tooltip" data-placement="bottom" title="" data-original-title="Adicionar Responsável">
								<i class="material-icons" style="color: green;">person_add</i>
							</a>
						</div>
						<div class="body">
