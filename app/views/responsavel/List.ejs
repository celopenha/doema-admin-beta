							<div class="table-responsive">
								<table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="dataTable" width="100%" cellspacing="0">
									<thead>
										<tr>
											<th>Nome</th>
											<th>CPF</th>
											<th>Telefone</th>
											<th>Bairro</th>
											<th>Logradouro</th>
											<th>CEP</th>
											<th>Ação</th>
										</tr>
									</thead>
									<tfoot>
										<tr>
											<th>Nome</th>
											<th>CPF</th>
											<th>Telefone</th>
											<th>Bairro</th>
											<th>Logradouro</th>
											<th>CEP</th>
											<th>Ação</th>
										</tr>
									</tfoot>
									<tbody>
									  <% for (var i = 0; i < itens.length; i++) { %>
										<tr>
											<td><%= itens[i].nome %></td>
											<td id="cpf"><%= itens[i].cpf %></td>
											<td id="celular"><%= itens[i].celular %></td>
											<td><%= itens[i].bairro %></td>
											<td><%= itens[i].logradouro %></td>
											<td id="cep"><%= itens[i].cep %></td>
											
											<!-- <td><%= itens[i].ativo === true ? 'Sim' : 'Não' %></td> -->

											<td>
												<a href="/app/<%= page %>/edit/<%= itens[i].id %>"data-toggle="modal" data-toggle-alt="tooltip" data-placement="bottom" title="" data-original-title="Editar Responsável">
													<i class="material-icons" style="color: orange;">edit</i>
												</a>
												
												<a href="#" data-toggle="modal"
													data-target="#logoutModal"
													onclick="setaDadosModal('<%= itens[i].id %>')" data-toggle="modal" data-toggle-alt="tooltip" data-placement="bottom" title="" data-original-title="Deletar Responsável">
													<i class="material-icons" style="color: red;">delete</i>
												</a>
												
