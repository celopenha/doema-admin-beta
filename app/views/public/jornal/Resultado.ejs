<body>

  <section class="bg-dark text-light py-5 text-center text-sm-start">
    <div class="container-sm">
      <div class="row">
        <div class="col-lg-4 col-md-4 col-sm-4 d-none d-md-block d-sm-block">
          <img src="/img/search.svg" alt="" class="img-fluid">
        </div>
        <div class="col-lg-8 col-md-8 col-sm-8 my-auto mx-auto">
          <h1 class=" display-1 lh-1" style="font-family: Corpid Black;">EXECUTIVO
            <span style="display: block;" class="display-6 text-warning"><%-termo[0].titulo %></span>
          </h1>
          <p class="lead">
            <%-termo[0].fragmento %>...
          </p>
          <a href="/inicio" class="btn btn-lg btn-outline-warning">
            Pesquisar Novamente &#8592
          </a>

        </div>

      </div>
  </section>

  <section class=" d-flex align-items-center">
    <div class="container mt-5">
      <div class="row ">
        <div class="col-xs-12 col-sm-12 col-md-12 col-lg-12">
          <div class="card  shadow-lg  rounded">

            <div class="card-body ">
              <table id="example" class="table table-striped" style="width:100%">
                <thead>
                  <tr>
                    <th>Caderno</th>
                    <th>Data </th>
                    <th>Resultado</th>
                    <th>Página</th>
                    <!-- <th>Visualizar</th>
                    <th>Download</th> -->
                  </tr>
                </thead>
                <tbody>

                  <% for (var i=0; i < termo.length; i++) { %>
                    <tr>
                      <td>
                        <%-termo[i].caderno %>
                      </td>
                      <td>
                        <%-termo[i].titulo %>
                      </td>
                      <td>
                        <%-termo[i].fragmento %>
                      </td>
                      <td>
                        <%=termo[i].pagina %>
                      </td>
                    </tr>
                   <% } %>

                </tbody>
                <tfoot>
                  <tr>
                    <th>Caderno</th>
                    <th>Data </th>
                    <th>Resultado</th>
                    <th>Página</th>
                    <!-- <th>Visualizar</th>
                    <th>Download</th> -->
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>

      </div>
    </div>
  </section>





  <!-- Optional JavaScript; choose one of the two! -->

  <!-- Option 1: Bootstrap Bundle with Popper -->
